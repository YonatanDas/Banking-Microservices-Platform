{
  "dashboard": {
    "title": "Spring Boot Metrics - Banking App (Production)",
    "tags": ["spring-boot", "banking", "prod"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=~\"accounts|cards|loans|gateway\"}[5m])",
            "legendFormat": "{{application}} - {{method}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "HTTP Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=~\"accounts|cards|loans|gateway\",status=~\"5..\"}[5m])",
            "legendFormat": "{{application}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      }
    ]
  }
}


# Terraform variables for the Staging environment
# Copy this file to stag.tfvars and update with your actual values
############################################

# REQUIRED: Environment identifier
environment = "stag"

# REQUIRED: AWS Account ID (12 digits)
aws_account_id = "YOUR_AWS_ACCOUNT_ID_HERE"

# OPTIONAL: AWS region (default: us-east-1)
# aws_region = "us-east-1"

# EKS Cluster Name
############################################
cluster_name = "bankingapp-stag-eks"

# VPC Configuration
##############################################
# REQUIRED: VPC CIDR block (must be valid CIDR format, e.g., 10.0.0.0/16)
vpc_cidr = "10.0.0.0/16"

# OPTIONAL: Public subnet CIDRs (default: ["10.0.1.0/24", "10.0.2.0/24"])
# public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]

# OPTIONAL: Private subnet CIDRs (default: ["10.0.3.0/24", "10.0.4.0/24"])
# private_subnet_cidrs = ["10.0.3.0/24", "10.0.4.0/24"]

# OPTIONAL: Availability zones (default: ["us-east-1a", "us-east-1b"])
# availability_zones = ["us-east-1a", "us-east-1b"]

# EKS Node Group Configuration
############################################
# OPTIONAL: EC2 instance type (default: t3.medium)
# Must be in format 'family.size' (e.g., t3.medium, m5.large)
node_instance_type = "t3.large"

# OPTIONAL: Desired number of nodes (default: 2)
# Must be between node_min_size and node_max_size
node_desired_capacity = 3

# OPTIONAL: Minimum number of nodes (default: 1)
node_min_size = 2

# OPTIONAL: Maximum number of nodes (default: 3)
node_max_size = 4

# RDS Database Configuration
############################################
# REQUIRED: RDS instance class (e.g., db.t3.micro, db.m5.large)
db_instance_class = "db.m5.medium"

# OPTIONAL: Database username (default: dbadmin)
db_username = "bankingdb"

# OPTIONAL: Database name (default: stag_bank)
# db_name = "stag_bank"

# OPTIONAL: Backup retention period in days (recommended: 7 for staging)
backup_retention_period = 7

# OPTIONAL: Enable deletion protection (recommended: true for staging)
deletion_protection = false

